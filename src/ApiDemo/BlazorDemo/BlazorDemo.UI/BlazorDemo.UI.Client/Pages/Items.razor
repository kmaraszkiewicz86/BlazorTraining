@page "/items"
@inherits TodoItemComponent


<h3>Items</h3>

@if (Items is null)
{
    <h1>Loading...</h1>
}
else if(Items.Count == 0)
{
    <h1>No items found</h1>
}
else
{
    @foreach (var item in Items)
    {
        <table>
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.IsDone</td>
            </tr>
        </table>
    }
}